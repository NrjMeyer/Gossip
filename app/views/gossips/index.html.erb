<h1>Hello les loulous </h1>
<p>Voici la liste de nos gossip</p>
<div class="row">
  <div class="col-lg-2"></div>
  <div class="col-lg-8">
    <table class="table table-hover table-dark-ligth">
  <thead>
    <tr>
      <th scope="col"><span class="fi-media-play"></span></th>
      <th scope="col">Content</th>
      <th>Details</th>
      <th scope="col"><a class="btn btn-md btn-success" href="<%= new_gossip_path%>">Ajouter</a></th>
    </tr>
  </thead>
<% @gossips.each do |gossip| %>
    
    <tbody>
      <th scope="row"><%= gossip.id%></th>
      <td><%= gossip.content%></td>
      <td><button type="button" class="btn btn-xl btn-ligth">
  Comment <span class="badge badge-dark"><%= gossip.comments.count%></span>
</button><a class="btn btn-md btn-primary" href="gossips/<%= gossip.id%>"> view</a></td>
    </tbody>
<% end %>
    </table>
  </div>
    
</div>
